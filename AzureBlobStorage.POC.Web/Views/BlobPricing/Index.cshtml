@using AzureBlobStorage.POC.Dto.Response;

@model BlobPricingResponse


@{
    ViewData["Title"] = "Blob Pricing";
}

<h2>Blob Pricing</h2>
<hr />

<div class="ml-1 row">
    <b>Reference:</b> &nbsp;
    <a target="_blank" href="https://azure.microsoft.com/en-us/pricing/details/storage/blobs/">Block Blob Pricing</a>
</div>
<br />

<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Access Tier</th>
            <th scope="col">Number of Items</th>
            <th scope="col">Total Size (GB)</th>
            <th scope="col">Price ($)</th>
        </tr>
    </thead>
    <tbody>
        @{ int counter = 1; }
        @foreach (var item in Model.Items)
        {
            <tr>
                <th scope="row">@counter</th>
                <td>
                    @item.TierName
                </td>
                <td>
                    @item.NumberOfItems
                </td>
                <td>
                    @String.Format("{0:F5}", item.TotalSize)
                </td>
                <td>
                    @String.Format("{0:F5}", item.Price)
                </td>
            </tr>
            counter++;
        }
    </tbody>
</table>

